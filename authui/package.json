{
  "name": "authui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "format": "prettier --write --list-different ./src ./packages",
    "build": "parcel build --no-cache 'src/*.html' --dist-dir ../resources/authgear/static/generated"
  },
  "alias": {
    "process": false
  },
  "devDependencies": {
    "@types/luxon": "2.0.9",
    "@types/zxcvbn": "4.4.1",
    "autoprefixer": "10.4.2",
    "parcel": "2.3.1",
    "postcss": "8.4.6",
    "postcss-cli": "9.1.0",
    "prettier": "2.5.1",
    "tailwindcss": "2.2.19",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@hotwired/stimulus": "3.0.1",
    "@hotwired/turbo": "7.1.0",
    "@tabler/icons": "1.41.1",
    "axios": "0.26.1",
    "cropperjs": "1.5.12",
    "intl-tel-input": "17.0.13",
    "luxon": "2.3.0",
    "zxcvbn": "4.4.2"
  }
}
