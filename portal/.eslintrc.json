{
  "plugins": ["@oursky"],
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "extends": [
    "plugin:@oursky/eslint",
    "plugin:@oursky/oursky",
    "plugin:@oursky/typescript",
    "plugin:@oursky/react",
    "plugin:@oursky/react-hooks"
  ],
  "env": {
    "browser": true
  },
  "globals": { "Set": "readonly", "Map": "readonly" },
  "rules": {
    "no-use-before-define": "off",
    "react/jsx-no-bind": "off",
    "react/forbid-elements": [
      "error",
      { "forbid": ["h1", "h2", "h3", "h4", "h5", "h6"] }
    ],
    "react/forbid-component-props": [
      "error",
      {
        "forbid": [
          {
            "propName": "subText",
            "allowedFor": [],
            "message": "subText is deprecated in Dialog component"
          }
        ]
      }
    ],
    "no-mixed-operators": "off",
    "no-undefined": "off",
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "@typescript-eslint/no-misused-promises": ["error", {
      "checksVoidReturn": {
        "attributes": false
      }
    }],
    "no-restricted-imports": ["error", {
      "paths": [{
        "name": "@fluentui/react",
        "importNames": ["TextField"],
        "message": "Please import \"TextField\" from ./src/TextField instead."
      }, {
        "name": "@elgorditosalsero/react-gtm-hook",
        "message": "Please import \"GTMProvider\" from ./src/GTMProvider instead."
      }, {
        "name": "@fluentui/react",
        "importNames": ["PrimaryButton"],
        "message": "Please import \"PrimaryButton\" from ./src/PrimaryButton instead."
      }, {
        "name": "@fluentui/react",
        "importNames": ["DefaultButton"],
        "message": "Please import \"DefaultButton\" from ./src/DefaultButton instead."
      }, {
        "name": "@fluentui/react",
        "importNames": ["MessageBarButton"],
        "message": "Please import \"MessageBarButton\" from ./src/MessageBarButton instead."
      }, {
        "name": "@fluentui/react",
        "importNames": ["ActionButton"],
        "message": "Please import \"ActionButton\" from ./src/ActionButton instead."
      }, {
        "name": "@fluentui/react",
        "importNames": ["CommandBarButton"],
        "message": "Please import \"CommandBarButton\" from ./src/CommandBarButton instead."
      }]
    }]
  }
}
