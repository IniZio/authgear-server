DEV_MODE=true
LOG_LEVEL=debug
TRUST_PROXY=true
AUTHGEAR_APP_ID=accounts
AUTHGEAR_CLIENT_ID=portal
AUTHGEAR_ENDPOINT=http://accounts.portal.localhost:3000
DATABASE_SCHEMA=app
DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres?sslmode=disable

CONFIG_SOURCE_TYPE=kubernetes
CONFIG_SOURCE_KUBECONFIG=./hack/kube-apiserver/.kubeconfig
CONFIG_SOURCE_KUBE_NAMESPACE=authgear

ADMIN_API_HOST_TEMPLATE=admin.{{ .AppID }}.localhost:3002

# This is for portal to view
APP_CUSTOM_RESOURCE_DIRECTORY=./hack/k8s-resources
# This is for main to view
CUSTOM_RESOURCE_DIRECTORY=./hack/k8s-resources
APP_HOST_SUFFIX=.localhost:3000
APP_KUBERNETES_INGRESS_TEMPLATE_FILE=./hack/ingress.tpl.yaml

APP_KUBERNETES_DEFAULT_DOMAIN_TLS_CERT_TYPE=cert-manager
APP_KUBERNETES_DEFAULT_DOMAIN_TLS_CERT_ISSUER_KIND=Issuer
APP_KUBERNETES_DEFAULT_DOMAIN_TLS_CERT_ISSUER_NAME=letsencrypt-staging
# Uncomment the following if you want to test static
# APP_KUBERNETES_DEFAULT_DOMAIN_TLS_CERT_TYPE=static
# APP_KUBERNETES_DEFAULT_DOMAIN_TLS_CERT_SECRET_NAME=wildcard-tls

APP_KUBERNETES_CUSTOM_DOMAIN_TLS_CERT_TYPE=cert-manager
APP_KUBERNETES_CUSTOM_DOMAIN_TLS_CERT_ISSUER_KIND=Issuer
APP_KUBERNETES_CUSTOM_DOMAIN_TLS_CERT_ISSUER_NAME=letsencrypt-staging

